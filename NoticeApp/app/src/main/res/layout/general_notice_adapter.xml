<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageId1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/announce"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/imageId1"
                android:padding="5dp"
                android:weightSum="15"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="14">

                    <TextView
                        android:id="@+id/titleId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:fontFamily="sans-serif"
                        android:textColor="#FF58A0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:id="@+id/upperLayoutId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/dateId"
                            android:textSize="14sp"
                            android:textColor="#FF58A0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_date" />

                        <TextView
                            android:id="@+id/timeId"
                            android:textSize="14sp"
                            android:textColor="#FF58A0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/nextToDetailsGeneralId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/forward"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
